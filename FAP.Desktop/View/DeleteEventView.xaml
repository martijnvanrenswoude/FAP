<Window x:Class="FAP.Desktop.View.DeleteEventView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAP.Desktop.View"
        mc:Ignorable="d"
        DataContext ="{Binding EventViewModel ,Source={StaticResource Locator}}"
        
        Title="DeleteEventView" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="Verwijder Event" FontSize="38" HorizontalAlignment="Center" Margin="5"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Width="792">
            <TextBox Text="{Binding SearchKey}" Width="150" Margin="5"/>
            <Button Content="Zoeken" Width="121" Margin="5"/>
        </StackPanel>
        <DataGrid ItemsSource="{Binding Events}" SelectedItem="{Binding SelectedEvent}"/>

        <Button Content="Verwijderen" Margin="5" Command="{Binding DeleteEventCommand}"/>
    </StackPanel>
</Window>
