<Window x:Class="FAP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FAP"
        mc:Ignorable="d"
        DataContext="{Binding Main, Source={StaticResource Locator}}"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DataGrid ItemsSource="{Binding Data}">
        </DataGrid>
        <Label Content="Naam PDF:" Margin="0,10,0,0"/>
        <TextBox Text="{Binding PDFName}" Width="160" HorizontalAlignment="Left"/>
        <Button Command="{Binding Export}" Content="Export to PDF" Margin="0,10,0,0" Width="160" Height="36" HorizontalAlignment="Left" Background="#FF81FF00"/>

    </StackPanel>
</Window>
